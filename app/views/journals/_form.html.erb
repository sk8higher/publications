<%= form_with(model: journal, data: { turbo: false }, class: "form-width-avg") do |form| %>
  <% if journal.errors.any? %>
    <div class="alert alert-danger">
      <h2>Ошибки: </h2>
      <ul>
        <% journal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row mb-3 w-50">
    <div class="col">
      <%= form.label :name, "Название" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mb-3 w-50">
    <div class="col">
      <%= form.label :issn, "ISSN" %>
      <%= form.text_field :issn, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col">
      <%= form.submit text, class: "btn btn-success" %>
    </div>
  </div>
<% end %>

<div class="row mt-3">
  <div class="col">
    <% if journal.present? && journal.id.present? %>
      <%= link_to "Назад", journal_path(journal), class: "btn btn-outline-primary" %>
    <% else %>
      <%= link_to "Назад", journals_path, class: "btn btn-outline-primary" %>
    <% end %>
  </div>
</div>
