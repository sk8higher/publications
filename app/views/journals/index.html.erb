<h1 class="text-center my-3">Все журналы</h1>

<div class="container">
  <div class="row">
    <div class="col text-center">
        <%= link_to "Добавить новый журнал", new_journal_path, class: "btn btn-outline-success mb-3" %>
    </div>
  </div>
</div>

<div class="container-fluid">
  <% @journals.each do |journal| %>
    <div class="mt-3">
      <p>Название: <%= journal.name %></p>
      <%= link_to "Посмотреть информацию", journal_path(journal), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
