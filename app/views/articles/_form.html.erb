<%= form_with(model: article, data: { turbo: false }, class: "form-width-avg") do |form| %>
  <% if article.errors.any? %>
    <div class="alert alert-danger">
      <h2>Ошибки: </h2>
      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row mb-3 w-50">
    <div class="col">
      <%= form.label :orig_name, "Название на языке оригинала" %>
      <%= form.text_field :orig_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mb-3 w-50">
    <div class="col">
      <%= form.label :eng_name, "Название на английском" %>
      <%= form.text_field :eng_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mb-3 w-50">
    <div class="col">
      <%= form.label :publish_date, "Дата публикации" %>
      <%= form.date_field :publish_date, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mb-3 w-50">
    <div class="col">
      <%= form.label :doi, "Идентификатор DOI" %>
      <%= form.text_field :doi, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mb-3 w-50">
    <div class="col">
      <%= form.label :journal_id, "Журнал" %>
      <%= form.select :journal_id, journals.map { |j| [j.name, j.id] }, class: "form-select" %>
    </div>
  </div>

  <div class="form-group row mb-3 w-50">
    <div class="col">
      <%= form.label :author_ids, "Авторы" %>
      <%= form.select :author_ids, authors.map { |a| [a.fullname, a.id] }, {}, multiple: true, class: "form-select" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col">
      <%= form.submit text, class: "btn btn-success" %>
    </div>
  </div>
<% end %>

<div class="row mt-3">
  <div class="col">
    <% if article.present? && article.id.present? %>
      <%= link_to "Назад", article_path(article), class: "btn btn-outline-primary" %>
    <% else %>
      <%= link_to "Назад", articles_path, class: "btn btn-outline-primary" %>
    <% end %>
  </div>
</div>
