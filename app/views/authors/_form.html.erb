<%= form_with(model: author, data: { turbo: false }, class: "form-width-avg") do |form| %>
  <% if author.errors.any? %>
    <div class="alert alert-danger">
      <h2>Ошибки: </h2>
      <ul>
        <% author.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row mb-3 w-50">
    <div class="col">
      <%= form.label :fullname, "ФИО" %>
      <%= form.text_field :fullname, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mb-3 w-50">
    <div class="col">
      <%= form.label :orcid, "ORCID" %>
      <%= form.text_field :orcid, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col">
      <%= form.submit text, class: "btn btn-success" %>
    </div>
  </div>
<% end %>

<div class="row mt-3">
  <div class="col">
    <%= link_to "Назад", author_path(author), class: "btn btn-outline-primary" %>
  </div>
</div>
