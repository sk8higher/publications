<h2 class="mt-3">Автор</h2>

<p>ФИО: <%= @author.fullname %></p>
<p>ORCID: <%= @author.orcid %></p>

<%= link_to "Изменить информацию", edit_author_path(@author), class: "btn btn-outline-info mb-3" %>
<%= link_to "Удалить автора", author_path(@author), data: { "turbo-method": :delete }, class: "btn btn-danger mb-3" %>
<%= link_to "Назад", authors_path, class: "btn btn-primary mb-3" %>
