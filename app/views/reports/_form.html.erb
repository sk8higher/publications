<%= form_with(model: report, data: { turbo: false }, class: "form-width-avg") do |form| %>
  <% if report.errors.any? %>
    <div class="alert alert-danger">
      <h2>Ошибки: </h2>
      <ul>
        <% report.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row mb-3 w-50">
    <div class="col">
      <%= form.label :orig_name, "Название на языке оригинала" %>
      <%= form.text_field :orig_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mb-3 w-50">
    <div class="col">
      <%= form.label :eng_name, "Название на английском" %>
      <%= form.text_field :eng_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mb-3 w-50">
    <div class="col">
      <%= form.label :publish_date, "Дата публикации" %>
      <%= form.date_field :publish_date, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mb-3 w-50">
    <div class="col">
      <%= form.label :conference_name, "Название конференции" %>
      <%= form.text_field :conference_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mb-3 w-50">
    <div class="col">
      <%= form.label :conference_location, "Место проведения конференции" %>
      <%= form.select :conference_location, ["Локальная", "Международная", "Заграничная"], class: "form-select" %>
    </div>
  </div>

  <div class="form-group row mb-3 w-50">
    <div class="col">
      <%= form.label :speaker_id, "Докладчик" %>
      <%= form.select :speaker_id, authors.map { |a| [a.fullname, a.id] }, class: "form-select" %>
    </div>
  </div>

  <div class="form-group row mb-3 w-50">
    <div class="col">
      <%= form.label :author_ids, "Авторы (зажмите Ctrl для выбора нескольких)" %>
      <%= form.select :author_ids, authors.map { |a| [a.fullname, a.id] }, {}, multiple: true, class: "form-select" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col">
      <%= form.submit text, class: "btn btn-success" %>
    </div>
  </div>
<% end %>

<div class="row mt-3">
  <div class="col">
    <% if report.present? && report.id.present? %>
      <%= link_to "Назад", report_path(report), class: "btn btn-outline-primary" %>
    <% else %>
      <%= link_to "Назад", reports_path, class: "btn btn-outline-primary" %>
    <% end %>
  </div>
</div>
